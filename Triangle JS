var data = 0;
var data2 = 0;
var data3 = 0;
var data4 = 0;
var data5 = 0;
var data6 = 0;
  
document.getElementById("display1").innerText = data;
  

function increment() {
    data = data+1;
    document.getElementById("display1").innerText = data;
}

function decrement() {
    if(data > 0){
      data--;
    }
  document.getElementById("display1").innerText = data;
}

